<Window x:Class="TradeBlotterAppl.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeBlotterAppl"
        mc:Ignorable="d"
        Title="LoginWindow" 
        Height="400" 
        Width="500"
        Left="450"
        Top="100">
    <Canvas Margin="0,0,2,-4">
        <Label x:Name="label1" Content="Password" HorizontalAlignment="Left" Margin="33,87,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="User Name" HorizontalAlignment="Left" Margin="24,31,0,0" VerticalAlignment="Top"/>
        <Image x:Name="loginWindow_jpg" Height="394" Source="loginWindow.jpg" Stretch="Fill" Width="507"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="195" Canvas.Left="205" Canvas.Top="161"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="116" Click="LoginAction" Canvas.Left="241" Canvas.Top="248" Height="31"/>
       
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="195" Canvas.Top="204" Canvas.Left="205"/>

    </Canvas>
</Window>
