<Window x:Class="TradeBlotterAppl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeBlotterAppl"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="600" 
        Width="1200"
        Left="80"
        Top="100">
    <Canvas Loaded="ReadAPI">
        <Image x:Name="loginImage_png" Height="52" Source="loginImage.png" Stretch="Fill" Width="73" Canvas.Left="10" Canvas.Top="10" RenderTransformOrigin="0.521,0.692"/>


        <DataGrid x:Name="dataTrade"  Canvas.Left="30" Canvas.Top="200" Height="auto" Width="auto"/>
        <ListBox x:Name="lstUserName" FontWeight="Bold" FontStretch="Normal" FontSize="20" BorderBrush="White"   Height="52" Canvas.Left="100" Canvas.Top="10" Width="134"/>
        <Button x:Name="button" Content="Filter" Canvas.Left="204" Canvas.Top="90" Width="133" Height="44" Click="filterTradeBlotter"/>
        <Button x:Name="button1" Content="Message Box" Canvas.Left="424" Canvas.Top="90" Width="133" Height="44"/>
        <Button x:Name="button2" Content="Calculator" Canvas.Left="704" Canvas.Top="90" Width="133" Height="44"/>
        <Button x:Name="button3" Content="Analysis" Canvas.Left="948" Canvas.Top="90" Width="133" Height="44"/>


    </Canvas>
</Window>
