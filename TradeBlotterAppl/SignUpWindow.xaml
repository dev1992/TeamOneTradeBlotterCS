<Window x:Class="TradeBlotterAppl.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeBlotterAppl"
        mc:Ignorable="d"
        Title="SignUpWindow" Height="300" Width="300">
    <Canvas>
        <Image x:Name="images_jpg" Height="270" Source="images.jpg" Stretch="Fill" Width="292"/>

        <TextBox x:Name="txtNewUserName" Height="23" Canvas.Left="145" TextWrapping="Wrap" Text="" Canvas.Top="69" Width="120"/>
        <PasswordBox x:Name="txtNewPassword" Canvas.Left="145" Canvas.Top="109" Width="120" Height="26"/>
        <Label x:Name="label" Content="User Name" Canvas.Left="36" Canvas.Top="66" Width="75"/>
        <Label x:Name="label1" Content="Password" Canvas.Left="36" Canvas.Top="109" Width="75"/>
        <Label x:Name="label2" Content="Sign Up" FontSize="30" FontFamily="calibri" Canvas.Left="90" Canvas.Top="10" Width="114"/>
        <Button x:Name="button" Content="Confirm" Canvas.Left="102" Canvas.Top="165" Width="75" Click="confrimSignUp"/>

    </Canvas>
</Window>
